{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo.server",
    "module": "CommonJS",
    "lib": ["esnext"],
    "types": ["node"],
    "jsx": "preserve",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node"
  }
}
